<div class="alert alert-info mb-4">
    <h6>Loan Terms Adjusted</h6>
    <% last_adjustment = @loan.loan_adjustments.last %>
    < class="row">
    <div class="col-md-6">
        <h6>Previous Terms:</h6>
        <p>Amount: <%= format_currency(last_adjustment.previous_amount) %></p>
        <p>Interest Rate: <%= number_to_percentage(last_adjustment.previous_interest_rate, precision: 2) %></p>
    </div>
    <div class="col-md-6">
        <h6>New Terms:</h6>
        <p>Amount: <%= format_currency(last_adjustment.new_amount) %></p>
        <p>Interest Rate: <%= number_to_percentage(last_adjustment.new_interest_rate, precision: 2) %></p>
    </div>
    
    <div class="mt-3">
        <%= button_to 'Accept Terms', 
                    accept_loan_path(@loan), 
                    method: :patch, 
                    class: 'btn btn-success' %>
        
        <%= button_to 'Reject Terms', 
                    reject_loan_path(@loan), 
                    method: :patch, 
                    class: 'btn btn-danger' %>
        
        <%= link_to 'Propose New Terms', 
                    edit_readjustment_loan_path(@loan), 
                    class: 'btn btn-warning' %>
    </div>
</div>