<div class="alert alert-info mb-4">
    <h6>User Requested Readjustment</h6>
    <% last_adjustment = loan.loan_adjustments.last %>
    <div class="row">
        <div class="col-md-6">
        <h6>Previous Terms:</h6>
        <p>Amount: <%= format_currency(last_adjustment.previous_amount) %></p>
        <p>Interest Rate: <%= number_to_percentage(last_adjustment.previous_interest_rate, precision: 2) %></p>
        </div>
        <div class="col-md-6">
        <h6>Requested Terms:</h6>
        <p>Amount: <%= format_currency(last_adjustment.new_amount) %></p>
        <p>Interest Rate: <%= number_to_percentage(last_adjustment.new_interest_rate, precision: 2) %></p>
        </div>
    </div>

    <div class="mt-3">
        <%= button_to 'Accept Request', 
                    accept_readjustment_admin_loan_path(loan), 
                    method: :patch, 
                    class: 'btn btn-success' %>
        
        <%= button_to 'Reject Request', 
                    reject_readjustment_admin_loan_path(loan), 
                    method: :patch, 
                    class: 'btn btn-danger' %>
        
        <%= link_to 'Propose Different Terms', 
                edit_readjustment_admin_loan_path(loan), 
                class: 'btn btn-warning' %>
    </div>
</div>