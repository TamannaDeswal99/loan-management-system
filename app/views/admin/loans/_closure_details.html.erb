<% if @loan.close? %>
    <div class="row mt-4">
        <div class="col-12">
        <div class="alert alert-info">
            <h5><i class="fas fa-info-circle"></i> Loan Closure Details</h5>
            <table class="table table-borderless">
            <tr>
                <th>Repayment Date:</th>
                <td> <%= loan.updated_at.strftime("%B %d, %Y at %H:%M") %></td>
            </tr>
            <tr>
                <th>Principal Amount:</th>
                <td>₹<%= number_with_precision(loan.amount, precision: 2) %></td>
            </tr>
            <tr>
                <th>Total Interest:</th>
                <td>₹<%= number_with_precision(loan.total_interest, precision: 2) %></td>
            </tr>
            <tr>
                <th>Total Amount Paid:</th>
                <td>₹<%= number_with_precision(loan.total_amount_due, precision: 2) %></td>
            </tr>
            </table>
        </div>
        </div>
    </div>
<% end %>