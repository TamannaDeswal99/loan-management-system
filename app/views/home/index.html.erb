<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-8 text-center">
      <h1>Welcome to Lending System</h1>
      <p class="lead">A secure platform for managing loans and transactions</p>
      
      <div class="mt-4">
        <% unless user_signed_in? %>
          <%= link_to "Sign In", new_user_session_path, class: "btn btn-primary btn-lg mx-2" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-primary btn-lg mx-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>